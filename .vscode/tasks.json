{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Anchor Program",
      "type": "shell",
      "command": "anchor",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Test Anchor Program",
      "type": "shell",
      "command": "anchor",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build Program Only (Skip IDL)",
      "type": "shell",
      "command": "cargo",
      "args": ["build-sbf"],
      "options": {
        "cwd": "${workspaceFolder}/programs/validator_blacklist"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cargo",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
